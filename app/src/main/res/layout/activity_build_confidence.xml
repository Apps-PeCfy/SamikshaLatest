<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_improve_focus"
        android:background="@color/login_button"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center_vertical"
            android:text="Feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center_vertical"
            android:text="Mental Exercise -  Energize and..."
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center_horizontal"
            android:text="How are you feeling?"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />
        
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_137sdp"
            android:src="@drawable/img_feeling"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/worksans_bold"
            android:gravity="center_horizontal"
            android:text="How was your performance?"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_137sdp"
            android:src="@drawable/img_performence"/>


    </LinearLayout>



    <Button
        app:backgroundTint="@null"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_dailog_data"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/shape_rounded_orange"
        android:fontFamily="@font/worksans_bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_150sdp"
        android:paddingStart="@dimen/_75sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_75sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18sdp" />




</LinearLayout>