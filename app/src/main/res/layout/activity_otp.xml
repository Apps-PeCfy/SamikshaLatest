<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_25sdp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/worksans_bold"
            android:text="Enter OTP"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


        <TextView
            android:id="@+id/tvOTP_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/_14sdp" />


        <LinearLayout
            android:id="@+id/root_otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_30sdp"
            android:weightSum="4">

            <EditText
                android:id="@+id/otp_edit_box1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/login_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_30sdp" />

            <EditText
                android:id="@+id/otp_edit_box2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/login_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_30sdp" />

            <EditText
                android:id="@+id/otp_edit_box3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/login_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_30sdp" />

            <EditText
                android:id="@+id/otp_edit_box4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_weight="1"
                android:backgroundTint="@color/login_button"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_30sdp" />




        </LinearLayout>


        <Button
            app:backgroundTint="@null"
            android:id="@+id/btnOTP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_centerVertical="true"

            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/shape_roundedbtn"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center"
            android:text="Verify number"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_20sdp">


            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_regular"
                android:text="Back"
                android:textColor="@color/login_button"
                android:textSize="@dimen/_16sdp" />


            <TextView
                android:id="@+id/txtResendTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/worksans_regular"
                android:gravity="end"
                android:text=" 30sec"
                android:textColor="@color/login_button"
                android:textSize="@dimen/_16sdp" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>