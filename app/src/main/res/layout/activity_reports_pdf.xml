<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sportPsychology.reports.ReportsPdfActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarReport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center_vertical"
        app:buttonGravity="center_vertical"
        app:titleTextColor="@color/white"
        app:title="">

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/homeMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewpdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/ll_no_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
                android:src="@drawable/no_report_available"/>


            <TextView
                android:padding="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvNoSessionData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/worksans_semibold"
                android:gravity="center"
                android:text="No assessment report available"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp" />



        </LinearLayout>



    </RelativeLayout>





</LinearLayout>