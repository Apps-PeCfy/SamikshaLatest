<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarReward"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:fontFamily="@font/worksans_regular"
            android:theme="@style/ToolBarTheme"

            />


        <ImageView
            android:visibility="gone"
            android:id="@+id/actionHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/action_home" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView

            android:id="@+id/imgReward"
            android:layout_width="@dimen/_282sdp"
            android:layout_height="@dimen/_270sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_reward" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/worksans_bold"
            android:text="Congratulations!"
            android:textColor="@color/ratingBar"
            android:textSize="@dimen/_28sdp" />

        <TextView
            android:id="@+id/tvRewardPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/worksans_regular"
            android:text="@string/rewards_Point"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

        <Button
            android:layout_marginTop="@dimen/_20sdp"
            app:backgroundTint="@null"
            android:id="@+id/btnRedeemPoint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:background="@drawable/shape_roundedbtn"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center"
            android:text="Reward Points"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


        <Button
            android:layout_marginTop="@dimen/_10sdp"
            app:backgroundTint="@null"
            android:id="@+id/btnExploreMental"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:background="@drawable/shape_roundedbtn"
            android:fontFamily="@font/worksans_regular"
            android:gravity="center"
            android:text="Explore Mental Skills"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />











    </LinearLayout>

</LinearLayout>