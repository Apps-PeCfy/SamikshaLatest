<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSmily"
        android:layout_marginTop="-30dp"
        android:background="@drawable/shape_rounded_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_25sdp">


        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:fontFamily="@font/worksans_bold"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Add to Training path ?"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/worksans_bold"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Add to follow the mental training exercise on a daily basis. Following mental training each day will also earn you reward points."
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingStart="@dimen/_25sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:visibility="visible">

            <Button
                android:id="@+id/btnYes"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:background="@drawable/shape_rounded_empty"
                android:fontFamily="@font/worksans_regular"
                android:text="Yes"
                app:backgroundTint="@null" />


            <Button
                android:id="@+id/btnNo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_30sdp"
                android:background="@drawable/shape_rounded_empty"
                android:fontFamily="@font/worksans_regular"
                android:text="No"

                app:backgroundTint="@null" />

        </RelativeLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imgSmily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_training_dialog" />


</RelativeLayout>