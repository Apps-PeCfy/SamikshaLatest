<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fontFamily="@font/worksans_regular"
        android:textColor="@color/white"
        android:theme="@style/ToolBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator" />




        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/dialog_close"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_dailog_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_202sdp"
                android:layout_below="@+id/img_close"
                android:src="@drawable/dialog_data" />

            <Button
                app:backgroundTint="@null"
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_dailog_data"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/shape_rounded_orange"
                android:fontFamily="@font/worksans_bold"
                android:gravity="center"
                android:paddingStart="@dimen/_75sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_75sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Done "
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />


        </RelativeLayout>








</RelativeLayout>