<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rounded_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:includeFontPadding="false"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/colorGreyText"
                    android:textColorHint="@color/colorGreyText"
                    android:textSize="@dimen/_15sdp" />






            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="center_vertical"
                    android:hint="Enter rank"
                    android:includeFontPadding="false"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textColor="@color/colorGreyText"
                    android:textColorHint="@color/colorGreyText"
                    android:textSize="@dimen/_15sdp" />






            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />

            <RelativeLayout

                android:id="@+id/rlVender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/spnVender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colorGreyText" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />


            <EditText

                android:id="@+id/edtSessionLink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="Session link"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/contactUsGrey" />


            <RelativeLayout

                android:id="@+id/rlGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/tvUserGender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colorGreyText" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />


            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="Start date"
                android:includeFontPadding="false"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/contactUsGrey" />


            <EditText
                android:id="@+id/tvUserRole"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="Role"
                android:includeFontPadding="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey"
                android:visibility="gone" />

            <RelativeLayout

                android:id="@+id/rlUserProfession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/spnUserGoals"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colorGreyText" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvUserSport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="sport"
                android:includeFontPadding="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/contactUsGrey"
                android:visibility="visible" />

            <RelativeLayout

                android:id="@+id/rlSPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Spinner
                    android:id="@+id/spnUserModel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colorGreyText" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvUserProfession"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="Profession"
                android:includeFontPadding="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />


            <EditText
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="Comment"
                android:includeFontPadding="false"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey" />




            <RelativeLayout

                android:id="@+id/rl_spinner_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:spinnerMode="dialog"
                    android:textColor="@color/colorGreyText" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="State"
                android:includeFontPadding="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tv_myCurrentLocation"
                android:background="@color/contactUsGrey"
                android:visibility="gone" />


            <EditText
                android:id="@+id/edtUserCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center_vertical"
                android:hint="City"
                android:includeFontPadding="false"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="@color/colorGreyText"
                android:textColorHint="@color/colorGreyText"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnSaveEditSession"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_46sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_roundedbtn"
        android:fontFamily="@font/worksans_regular"
        android:gravity="center"
        android:paddingStart="@dimen/_50sdp"
        android:paddingEnd="@dimen/_50sdp"
        android:text="Save"
        android:textAllCaps="false"

        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:backgroundTint="@null" />


</RelativeLayout>