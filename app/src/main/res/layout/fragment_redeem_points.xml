<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:textSize="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/contactUsGrey"
        android:fontFamily="@font/worksans_semibold"
        android:padding="@dimen/_15sdp"
        android:text="Available coupons"
        android:textColor="@color/black" />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_myPoints"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"

        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:src="@drawable/no_coupan_available"/>


        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvNoSessionData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans_semibold"
            android:gravity="center"
            android:text="You donâ€™t have any coupon available for redemption"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textSize="@dimen/_20sdp" />



    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/tvOffers"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/worksans_bold"
        android:gravity="center_horizontal"
        android:padding="@dimen/_15sdp"
        android:textSize="@dimen/_30sdp"
        android:text=""
        android:textColor="@color/black" />




</LinearLayout>


