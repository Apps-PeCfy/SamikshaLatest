<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_30sdp"
    android:paddingEnd="@dimen/_15sdp">


    <LinearLayout
        android:id="@+id/llLanguage"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Select Language"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"

                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/worksans_regular"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select language for the audios"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_lang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom|end"
            android:paddingEnd="@dimen/_25sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLanguage"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select Default City"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


        <Spinner

            android:id="@+id/spinner_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1.2"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom|end"
            android:paddingEnd="@dimen/_25sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCity"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/worksans_bold"
                android:text="Notification"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"

                android:fontFamily="@font/worksans_regular"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Turn notification On/Off"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_notification"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.9"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom|end"
            android:paddingEnd="@dimen/_25sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llunit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCurrency"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Reminder"

                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"

                android:fontFamily="@font/worksans_regular"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Turn reminder On/Off"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_reminder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="1.3"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom|end"
            android:paddingEnd="@dimen/_25sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llunit"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_bold"
                android:text="Daily Tips"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"

                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"

                android:fontFamily="@font/worksans_regular"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Want to receive daily tips?"
                android:textColor="@color/colorGreyText"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_tips"
android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom|end"
            android:paddingEnd="@dimen/_25sdp"

            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_46sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/shape_roundedbtn"
        android:fontFamily="@font/worksans_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/_50sdp"
        android:paddingEnd="@dimen/_50sdp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15sdp"

        app:backgroundTint="@null" />


</RelativeLayout>


